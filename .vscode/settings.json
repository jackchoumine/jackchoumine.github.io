{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "stylelint.validate": ["css", "scss", "less", "scss", "vue", "sass"],
  "liveSassCompile.settings.formats": [
    {
      // nested 嵌套模式
      // compressed 压缩模式
      // compact 紧凑模式
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "~/css"
    }
  ],
  "markdownFormatter.formatOpt": {
    "indent_size": 2
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "mervin.markdown-formatter",
    // 快速补全
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "fileheader.customMade": {
    "Author": "ZhouQiJun",
    "Date": "Do not edit",
    "LastEditors": "ZhouQiJun",
    "LastEditTime": "Do not edit",
    "Description": "关于博主，前端程序员，最近专注于 webGis 开发",
    "加微信": "MasonChou123，进技术交流群"
  },
  "fileheader.cursorMode": {
    "Author": "ZhouQiJun",
    "Description": "关于博主，前端程序员，最近专注于 webGis 开发",
    "加微信": "MasonChou123，进技术交流群"
  },
  "compile-hero.disable-compile-files-on-did-save-code": false,
  "livePreview.defaultPreviewPath": "/packages/learn-scss/index.html",
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  },
  "cSpell.words": [
    "antd",
    "asynchronization",
    "echarts",
    "hoverintent",
    "IIFE",
    "latlng",
    "Littleton",
    "popperjs",
    "preinstall",
    "retval",
    "rushstack",
    "stylelint",
    "todos",
    "trivago",
    "unplugin",
    "USGS",
    "vitepress",
    "Vnode"
  ],
  // 这些文件将不会显示在工作空间中
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts" //ts编译后生成的js文件将不会显示在工作空中
    },
    "**/node_modules": true
  }
}
